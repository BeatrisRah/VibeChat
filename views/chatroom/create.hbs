{{> nav}}

<div class="container mt-5 mb-5 d-flex justify-content-center">
    <div class="card px-1 py-4">
        <div class="card-body">
            {{#if error}}
            {{>errorToast}}
            {{/if}}
            <h1 class="mb-3" >Create Chatroom</h1>
            <h6 class="card-title mb-3">This chatroom is</h6>
            <form method="post" enctype="multipart/form-data" >
            <div class="d-flex flex-row"> <label class="radio mr-1"> 
                <input type="radio" name="visibility" value="public" checked> <span> <i class="fa fa-user"></i> Public </span> </label> <label class="radio"> 
                <input type="radio" name="visibility" value="private" disabled> <span> <i class="fa fa-plus-circle"></i> Private </span> Coming soon </label> </div>
            
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="name" class="h5 mt-3">Title:</label>
                        <input class="form-control" type="text" name="title" placeholder="Cat lovers..."> 


                        <label for="name" class="h5 mt-3">Description:</label>
                        <input class="form-control" type="text" name="description" placeholder="Share your cats with the world...">

                        <label for="name" class="h5 mt-3">Image:</label>
                        <input class="form-control" type="file" name="imageURL" accept="image/*" > 
                    </div>

                </div>
            </div>
            <div class=" d-flex flex-column text-center px-5 mt-3 mb-3"> <small class="agree-text">By making this chatroom you agree to the</small> <a href="#" class="terms">Terms & Conditions</a> 
            </div> 
            <button class="btn btn-primary btn-block confirm-button">Create</button>
            </form>
        </div>
    </div>
</div>