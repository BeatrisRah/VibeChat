{{> nav}}

<section class="service_section layout_padding">
    <div class="service_container">
        <div class="container ">
            <div class="heading_container heading_center">
                <h2>
                    Our <span>Chatrooms</span>
                </h2>
                <p>
                    Find what you vibe with.ðŸ‘€
                </p>
                {{#if user}}
                <div class="btn-box-custom">
                    <a href="/chatrooms/create" class="create-btn">
                        Or create one?
                    </a>
                </div>
                {{/if}}
            </div>
            <div class="row">
                {{#each chatroomList}}
                <div class="col-md-4 ">
                    <div class="box ">
                        <div class="img-box">
                            <img src="{{imageURL}}" alt="{{title}}">
                        </div>
                        <div class="detail-box">
                            <h5>
                                {{title}}
                            </h5>
                            <p>
                                {{description}}
                            </p>
                            {{!-- TODO Add BUttons for guest and user --}}
                            <button type="button" class="btn btn-primary btn-sm"><a href="/chatrooms/{{_id}}/join">Join Chatroom</a></button>
                            <button type="button" class="btn btn-secondary btn-sm"><a href="/chatrooms/{{_id}}/details">Small button</a></button>
                        </div>
                    </div>
                </div>
                {{/each}}
                
            </div>
            <div class="btn-box">
                <a href="">
                    View All
                </a>
            </div>
        </div>
    </div>
</section>